.product
  %h2= @product.name
  %p= @product.description
  %p
    %strong= "Price = #{number_to_currency(@product.price)}"
  = link_to 'Edit', edit_product_path(@product), :class => 'btn btn-primary btn-mini'
  = link_to 'Delete', @product, :confirm => 'Are you sure?', :method => :delete, :class => 'btn btn-danger btn-mini'